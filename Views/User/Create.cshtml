@model CadastroDeUsuario.Models.ViewModel.UserFormViewModel

@{
    ViewData["Title"] = "Create User";
}


<h2 class="text-center m-5">@ViewData["Title"]</h2>


<section class="w-100 h-100">
    <form asp-action="Create" class="w-50 m-auto ">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-row">
            <div class="col form-group mb-2 ">
                <label asp-for="User.Name" class="control-label pb-1 "></label>
                <input asp-for="User.Name" class="form-control ">
            </div>
            <div class="col form-group mb-2">
                <label asp-for="User.Email" class="control-label pb-1 "></label>
                <input asp-for="User.Email" class="form-control ">
            </div>

            <div class="col form-group">
                <input type="submit" value="Create" class="btn btn-danger ">
            </div>
        </div>
    </form>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}